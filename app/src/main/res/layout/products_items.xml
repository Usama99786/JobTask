<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_180sdp"
    android:layout_height="@dimen/_180sdp"
    android:background="#FFFFFF"
    android:id="@+id/product_card"
    android:layout_marginLeft="@dimen/_10sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">



        <ImageView
            android:id="@+id/product_img"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            android:layout_marginBottom="@dimen/_10sdp"
            android:src="@drawable/bed_img"
            app:layout_constraintBottom_toTopOf="@+id/product_name_txt"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/price_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs 200/month"
            android:textColor="@color/text_color"
            android:fontFamily="@font/poppins_light"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/product_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_light"
            android:text="Dining Table"
            android:textColor="@color/text_color"
            app:layout_constraintBottom_toTopOf="@+id/price_txt"
            app:layout_constraintStart_toStartOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>